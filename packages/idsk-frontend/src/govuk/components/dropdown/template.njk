{% from "../../macros/attributes.njk" import govukAttributes -%}

<div class="">
  <div data-module="govuk-dropdown" class="idsk-dropdown__wrapper {%- if params.classes %} {{ params.classes }}{% endif %}"
    {{- govukAttributes(params.attributes) }}>
    <button class="idsk-button idsk-dropdown" type="button" aria-label="Rozbaliť {{ params.attributes['data-pseudolabel'] }}" aria-haspopup="listbox">
      <span class="idsk-button__text">{% if params.selected %}{{params.selected}}{% else %}slovenčina{% endif %}</span>
      <span class="material-icons" aria-hidden="true">arrow_drop_down</span>
    </button>
    <ul id="undefined-dropdown" class="idsk-dropdown__options idsk-dropdown__options--down" data-testid="dropdown-options">
      {% if params.items | length %}
        {% for item in params.items %}
          <li class="idsk-dropdown__option idsk-pseudolabel__wrapper" data-pseudolabel="{{ item.text }}">
            <a href="{{ item.href }}" {% if item.lang %}lang="{{ item.lang }}"{% endif %}>
              {{ item.text }}
            </a>
          </li>
        {% endfor %}
      {% else %}
        <li class="idsk-dropdown__option idsk-pseudolabel__wrapper" data-pseudolabel="english">
          <a href="#" lang="en">english</a>
        </li>
        <li class="idsk-dropdown__option idsk-pseudolabel__wrapper" data-pseudolabel="український">
          <a href="#" lang="uk">український</a>
        </li>
      {% endif %}
    </ul>
  </div>
</div>
